<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <Switch
        android:id="@+id/switch1"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="Testnet/Mainnet" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:text="If you a're a new user, please click on the create XRK wallet or XRK MultiSig wallet button."
        android:textAlignment="center"
        android:textSize="15sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttoncreatexrkwallet"
            android:layout_width="145dp"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="CREATE XRK WALLET"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="7dp"
            android:text="OR"
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttoncreatemultisigwallet"
            android:layout_width="145dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="7dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:text="CREATE MULTISIG WALLET"
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonrestorexrkwallet"
        android:layout_width="145dp"
        android:layout_height="65dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="5dp"
        android:text="RESTORE XRK WALLET"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="If you already have RecordsKeeper's XRK wallet or XRK MultiSig wallet, please enter your wallet address here."
        android:textAlignment="center"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/addresstext"
        android:layout_width="247dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="55dp"
        android:ems="10"
        android:hint="Enter your XRK wallet address"
        android:inputType="text"
        android:textAlignment="center" />

    <Button
        android:id="@+id/buttonsubmits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:textAlignment="center"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>

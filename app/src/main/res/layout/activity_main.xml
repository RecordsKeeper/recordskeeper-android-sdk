<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dce2e2"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:weightSum="1">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_weight="1.22" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textStyle="bold"
            android:id="@+id/testmain"/>

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_height="match_parent"
        android:background="#ffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="If you a're a new user, please click on the create XRK wallet or XRK MultiSig wallet button."
            android:textAlignment="center"
            android:textSize="15sp" />

        <Button
            android:id="@+id/buttoncreatexrkwallet"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/buttons"
            android:text="CREATE XRK WALLET"
            android:textAlignment="center"
            android:textColor="#ffff" />

        <Button
            android:id="@+id/buttoncreatemultisigwallet"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttons"
            android:text="CREATE MULTISIG WALLET"
            android:textAlignment="center"
            android:textColor="#ffff" />


        <Button
            android:id="@+id/buttonrestorexrkwallet"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/buttons"
            android:textColor="#ffff"
            android:text="RESTORE XRK WALLET"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:text="Already have XRK wallet?"
            android:textAlignment="center"
            android:textSize="15sp" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/addresstext"
                android:layout_width="255dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:paddingLeft="5dp"
                android:ems="10"
                android:hint="Enter your XRK wallet address"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/buttonsubmits"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="SUBMIT"
            android:background="@drawable/buttons"
            android:textColor="#ffff"
            android:textAlignment="center"
            android:layout_marginLeft="115dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>
